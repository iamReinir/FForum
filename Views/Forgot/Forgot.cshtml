<!doctype html>
<html>
<head>
	<meta charset='utf-8'>
	<meta name='viewport' content='width=device-width, initial-scale=1'>
	<title>Forgot Password</title>
	<link href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css'
		  rel='stylesheet'>
	<link href='' rel='stylesheet'>
	<script type='text/javascript'
			src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
	<link rel="stylesheet" href="~/css/ForgotStyle.css">
	<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
	<link rel="stylesheet" href="alert/dist/sweetalert.css"

</head>
<body oncontextmenu='return false' class='snippet-body'>
	<div class="container padding-bottom-3x mb-2 mt-5">
		<div class="row justify-content-center">
			<div class="col-lg-8 col-md-10">
				<div class="forgot">
					<h2>Forgot your password?</h2>
					<p>
						Change your password in three easy steps. This will help you
						to secure your password!
					</p>
					<ol class="list-unstyled">
						<li>
							<span class="text-primary text-medium">1. </span>Enter
							your name below.
						</li>
						<li>
							<span class="text-primary text-medium">2. </span>Our
							system will send you an OTP to your email
						</li>
						<li>
							<span class="text-primary text-medium">3. </span>Enter the OTP on the
							next page
						</li>
					</ol>
				</div>
				<form class="card mt-4" id="Forgot-form" method="POST">
					<div class="card-body">
						<div class="form-group">
							<label for="email-for-pass">Enter your name</label> <input class="form-control" type="text" name="name" id="name" required=""><small class="form-text text-muted">
								Enter the registered your name . Then we'll
								email a OTP to your address.
							</small>
						</div>
					</div>
					@if (Model == forum.Controllers.ForgotController.LoginState.none)
					{
						<script>swal("Error", "Username not have", "error");</script>
					}


					<!-- return login or resetpass -->
					<div class="card-footer">
						<!---<input type="submit" class="btn btn-success" value="Get new pass" />-->
						<button onclick="form_check_and_submit()">Forgot</button>
						<a href="Login"><input type="button" class="btn btn-danger" value="Back to Login" /></a>
					</div>
				</form>
			</div>
		</div>
	</div>
	<script src="js/main.js"></script>
	<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
	<link rel="stylesheet" href="alert/dist/sweetalert.css" />
	<script type="text/javascript">
		var status = document.getElementById("status").value;
		if (status == "success") {
			swal("Congrats", "Register successfully", "success");
		}

	</script>
	<script src="vendor/jquery/jquery.min.js"></script>
</body>
</html>