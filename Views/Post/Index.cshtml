@model List<forum.Models.Post>
@{
    ViewData["title"] = "post infomation";
    Layout = "_layout";
    var postset = new forum.Database.PostSet();
    var listpost = postset.GetPosts();
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Post List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Post" asp-action="Create" class="btn btn-dark">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-plus-fill" viewBox="0 0 16 16">
                    <path d="M8 2a5.53 5.53 0 0 0-3.594 1.342c-.766.66-1.321 1.52-1.464 2.383C1.266 6.095 0 7.555 0 9.318 0 11.366 1.708 13 3.781 13h8.906C14.502 13 16 11.57 16 9.773c0-1.636-1.242-2.969-2.834-3.194C12.923 3.999 10.69 2 8 2zm.5 4v1.5H10a.5.5 0 0 1 0 1H8.5V10a.5.5 0 0 1-1 0V8.5H6a.5.5 0 0 1 0-1h1.5V6a.5.5 0 0 1 1 0z" />
                </svg>Add New Post
            </a>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Poster ID</td>
                    <td>Content</td>
                    <td>Create at</td>
                    <td>Last Updated</td>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in listpost)
                {
                    var info = postset.GetPostInfo(item);
                    <tr>
                        <td>@item.Poster_id</td>
                        <td>@info.Content</td>
                        <td>@item.Create_date</td>
                        <td>@item.Last_update</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>